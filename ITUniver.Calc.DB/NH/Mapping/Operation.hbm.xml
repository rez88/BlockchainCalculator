<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="ITUniver.Calc.DB.Models" assembly="ITUniver.Calc.DB">

  <class name="Operation" table="[Operation]">

    <id name="Id">
      <generator class="native" />
    </id>
    <property name="Name"/>
    <property name="Owner"/>
    <property name="ArgsCount"/>
    <property name="CreationDate" />

    <set name="History" inverse="true" lazy="true">
      <key column="Operation"/>
      <one-to-many class="HistoryItem"/>
    </set>
    
  </class>
  
</hibernate-mapping>